@model TimiTS.Models.WorkParticipation

<div >
    <h2>Rediger Fravær</h2>
</div>

<form asp-action="Edit" method="post">
    <div class="form-horizontal">

        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="WPId" />
        <div class="form-group">
            <label asp-for="WorkTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="WTId.WTType" class="form-control" />
                <span asp-validation-for="WTId.WTType" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateTimeIn" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateTimeIn" class="form-control" type="datetime" />
                <span asp-validation-for="DateTimeIn" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Hours" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Comment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>        
		<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="btn-changes">
                        <button type="submit" class="btn btn-default btn-block">Lagre</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="btn-changes">
                        <a asp-action="Index" class="btn btn-default btn-block">Tilbake</a>
                    </div>
                </div>
            </div>
    </div>
</form>